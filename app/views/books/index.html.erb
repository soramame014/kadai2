 <% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
 <% end %>
 
   <% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>
   
<h1>&emsp;Books</h1>

<% @books.each do |book| %>
<table>
 <p>Title</p>
 <span><%= book.title %></span>

 <p>Body</p>
 <span><%= book.body %></span>

 <span>
 <%= link_to "Show",book_path(book) %>
 </span>

 <span>
 <%= link_to "Edit",edit_book_path(book) %>

 </span>

 <span>
 <%= link_to "Destroy",book_path(book) ,method: :delete ,"data-confirm" => "Are you sure?" %>
 </span>

 <% end %>

 <h2>New book</h2>

<!-- form_with部分 -->
 <%= form_with model: @book do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Body</h4>
 <%= f.text_area :body %>

 <%= f.submit 'Create Book' %>

 <% end %>
 
</table>